<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.avitech.sia.iu.MovimientoDialogController"
      spacing="15" style="-fx-padding: 20px;">

    <Label fx:id="lblTitulo" text="Registrar Movimiento" styleClass="h3"/>

    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbProducto" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Cantidad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCantidad" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Motivo/Detalle:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDetalle" GridPane.rowIndex="2" GridPane.columnIndex="1" prefRowCount="3"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#onCancel"/>
        <Button fx:id="btnGuardar" text="Guardar" onAction="#onSave" styleClass="primary"/>
    </HBox>

</VBox>
