<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.avitech.sia.iu.MovimientoDialogController"
      spacing="15" style="-fx-padding: 20px;">

    <Label fx:id="lblTitulo" text="Registrar Movimiento" styleClass="h3"/>

    <GridPane fx:id="gridPaneCampos" hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="40"/>
            <ColumnConstraints percentWidth="60"/>
        </columnConstraints>

        <Label text="Producto:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <ComboBox fx:id="cbProducto" promptText="Seleccionar o escribir producto" editable="true" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Cantidad:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCantidad" promptText="Ej: 10" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label fx:id="lblUnidad" text="Unidad:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtUnidad" promptText="Ej: kg, unidad, saco" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label fx:id="lblProveedor" text="Proveedor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtProveedor" promptText="Nombre del proveedor" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label fx:id="lblValorTotal" text="Valor Total:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtValorTotal" promptText="Ej: 150.50" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label fx:id="lblDetalle" text="Motivo/Detalle:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextArea fx:id="txtDetalle" GridPane.rowIndex="5" GridPane.columnIndex="1" prefRowCount="3"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#onCancel"/>
        <Button fx:id="btnGuardar" text="Guardar" onAction="#onSave" styleClass="primary"/>
    </HBox>

</VBox>
