<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="16"
      fx:controller="com.avitech.sia.iu.parametros.LotesController"
      styleClass="content">

    <!-- Encabezado -->
    <VBox spacing="6">
        <Label text="Lotes de Aves" styleClass="h2"/>
        <Label text="Gestione los lotes de producción de la avícola" styleClass="helper"/>
    </VBox>

    <!-- Barra de herramientas -->
    <VBox styleClass="card" spacing="12">
        <HBox spacing="12" alignment="CENTER_LEFT">
            <TextField fx:id="txtSearch" promptText="🔍 Buscar lote..." prefWidth="280" onKeyReleased="#onSearch"/>
            <ComboBox fx:id="cbGalpon" prefWidth="180" promptText="Galpón"/>
            <ComboBox fx:id="cbEstado" prefWidth="180" promptText="Estado"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="+ Nuevo Lote" onAction="#onAgregar" styleClass="primary"/>
            <Button text="↻" onAction="#onRefresh" styleClass="secondary" style="-fx-font-size: 16px;"/>
        </HBox>
    </VBox>

    <!-- Tabla de lotes -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tbl" styleClass="movement-table">
            <columns>
                <TableColumn text="Lote" fx:id="cNombre" prefWidth="200"/>
                <TableColumn text="N° Aves" fx:id="cAves" prefWidth="110"/>
                <TableColumn text="Edad (sem)" fx:id="cEdad" prefWidth="110"/>
                <TableColumn text="Raza" fx:id="cRaza" prefWidth="170"/>
                <TableColumn text="Galpón" fx:id="cGalpon" prefWidth="150"/>
                <TableColumn text="Fecha Ingreso" fx:id="cFecha" prefWidth="130"/>
                <TableColumn text="Estado" fx:id="cEstado" prefWidth="100"/>
                <TableColumn text="Acciones" fx:id="cAccion" prefWidth="120"/>
            </columns>
            <placeholder>
                <Label text="No hay lotes registrados" styleClass="helper"/>
            </placeholder>
        </TableView>
    </VBox>

    <padding><Insets topRightBottomLeft="4"/></padding>
</VBox>
