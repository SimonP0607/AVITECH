<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns:fx="http://javafx.com/fxml" spacing="12"
      fx:controller="com.avitech.sia.iu.parametros.LotesController">
    <children>
        <HBox spacing="10">
            <children>
                <TextField fx:id="txtSearch" promptText="Buscar..." />
                <ComboBox fx:id="cbEstado" prefWidth="180"/>
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="+ Agregar" onAction="#onAgregar" styleClass="primary"/>
            </children>
        </HBox>

        <TableView fx:id="tbl" prefHeight="420">
            <columns>
                <TableColumn text="Nombre" fx:id="cNombre" prefWidth="220"/>
                <TableColumn text="N° Aves" fx:id="cAves" prefWidth="110"/>
                <TableColumn text="Edad (sem)" fx:id="cEdad" prefWidth="110"/>
                <TableColumn text="Raza" fx:id="cRaza" prefWidth="160"/>
                <TableColumn text="Galpón" fx:id="cGalpon" prefWidth="120"/>
                <TableColumn text="Estado" fx:id="cEstado" prefWidth="110"/>
                <TableColumn text="Acciones" fx:id="cAccion" prefWidth="120"/>
            </columns>
        </TableView>
    </children>
</VBox>
