<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="16"
      fx:controller="com.avitech.sia.iu.parametros.UbicacionesController"
      styleClass="content">

    <!-- Encabezado -->
    <VBox spacing="6">
        <Label text="Ubicaciones y Galpones" styleClass="h2"/>
        <Label text="Configure las ubicaciones físicas de la avícola (galpones, bodegas, áreas)" styleClass="helper"/>
    </VBox>

    <!-- Barra de herramientas -->
    <VBox styleClass="card" spacing="12">
        <HBox spacing="12" alignment="CENTER_LEFT">
            <TextField fx:id="txtSearch" promptText="🔍 Buscar ubicación..." prefWidth="280" onKeyReleased="#onSearch"/>
            <ComboBox fx:id="cbTipo" prefWidth="180" promptText="Tipo"/>
            <ComboBox fx:id="cbEstado" prefWidth="180" promptText="Estado"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Button text="+ Nueva Ubicación" onAction="#onAgregar" styleClass="primary"/>
            <Button text="↻" onAction="#onRefresh" styleClass="secondary" style="-fx-font-size: 16px;"/>
        </HBox>
    </VBox>

    <!-- Tabla de ubicaciones -->
    <VBox styleClass="card" VBox.vgrow="ALWAYS">
        <TableView fx:id="tbl" styleClass="movement-table">
            <columns>
                <TableColumn text="Nombre" fx:id="cNombre" prefWidth="220"/>
                <TableColumn text="Tipo" fx:id="cTipo" prefWidth="140"/>
                <TableColumn text="Capacidad" fx:id="cCapacidad" prefWidth="130"/>
                <TableColumn text="Responsable" fx:id="cResp" prefWidth="200"/>
                <TableColumn text="Descripción" fx:id="cDesc" prefWidth="200"/>
                <TableColumn text="Estado" fx:id="cEstado" prefWidth="100"/>
                <TableColumn text="Acciones" fx:id="cAccion" prefWidth="120"/>
            </columns>
            <placeholder>
                <Label text="No hay ubicaciones registradas" styleClass="helper"/>
            </placeholder>
        </TableView>
    </VBox>

    <padding><Insets topRightBottomLeft="4"/></padding>
</VBox>
